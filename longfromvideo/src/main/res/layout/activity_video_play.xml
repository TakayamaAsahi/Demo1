<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VideoPlayActivity">
        <com.shuyu.gsyvideoplayer.video.GSYSampleADVideoPlayer
            android:id="@+id/l_video_player"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="220dp">
        </com.shuyu.gsyvideoplayer.video.GSYSampleADVideoPlayer>
        <master.flame.danmaku.ui.widget.DanmakuView
            android:id="@+id/l_video_danmu"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="220dp">
        </master.flame.danmaku.ui.widget.DanmakuView>
        <EditText
            android:id="@+id/l_ed_danmu"
            android:layout_marginTop="8dp"
            android:background="#E4E2E2"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/l_video_player"
            app:layout_constraintLeft_toRightOf="@+id/l_tab"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
        </EditText>
        <Button
            android:id="@+id/l_bt_danmu"
            android:textSize="10dp"
            android:text="发送"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/l_video_player"
            app:layout_constraintLeft_toRightOf="@+id/l_ed_danmu"
            android:layout_width="60dp"
            android:layout_height="40dp">
        </Button>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/l_tab"
            app:layout_constraintTop_toBottomOf="@+id/l_video_player"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="180dp"
            android:layout_height="wrap_content">
        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/l_vp"
            app:layout_constraintTop_toBottomOf="@+id/l_tab"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </androidx.viewpager.widget.ViewPager>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>